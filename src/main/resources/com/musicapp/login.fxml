<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.musicapp.LoginController"
      alignment="CENTER" 
      spacing="20"
      style="-fx-background-color: #dba5a5;"
      prefWidth="412" 
      prefHeight="812">

    
    <Label text="ChordSeer" style="-fx-font-size: 32px; -fx-font-weight: bold;"/>
    
   
    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
        <TextField fx:id="usernameField" promptText="Username" 
                  style="-fx-background-radius: 15; -fx-pref-width: 300;"/>
        
        <PasswordField fx:id="passwordField" promptText="Password" 
                     style="-fx-background-radius: 15; -fx-pref-width: 300;"/>
        
        <Button fx:id="loginButton" text="Login" 
               onMouseClicked="#loginButtonClicked"
               style="-fx-background-radius: 15; -fx-pref-width: 300; -fx-pref-height: 40;"/>
        
        <Button fx:id="createAccountButton" text="Create Account" 
               onMouseClicked="#createAccountButtonClicked"
               style="-fx-background-radius: 15; -fx-pref-width: 300; -fx-pref-height: 40;"/>
    </VBox>

</VBox>