<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.musicapp.SongMenuController"
            prefWidth="375" prefHeight="812"
            style="-fx-background-color: #dba5a5;">

    <VBox spacing="10.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">

    <Label fx:id="welcomeLabel" text="welcome,{username}" style="-fx-font-size: 20px; -fx-font-weight: bold;" />

    <!-- Rounded Search Bar -->
    <TextField fx:id="SearchField" promptText="Search"
        onAction="#handleSearchInput"
               style="-fx-background-color: #702c2c; -fx-text-fill: white; -fx-background-radius: 10;" />

    <!-- Saved Songs Section -->
    <VBox style="-fx-background-color: #702c2c; -fx-padding: 10; -fx-background-radius: 10;" spacing="5">
        <Label text="Saved Songs:" textFill="white" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <HBox spacing="5">
            <Label text="Image1" style="-fx-border-color: white; -fx-padding: 20; -fx-border-radius: 10;" />
            <Label text="image2" style="-fx-border-color: white; -fx-padding: 20; -fx-border-radius: 10;" />
            <Button fx:id="addSavedSongButton" text= "+" 
             onAction="#handleAddSavedSong"
             styleClass="add-button"
            style="
            -fx-background-color: #702c2c; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 24px; -fx-padding: 10 15; -fx-min-width: 50px; -fx-min-height: 50px "/>
        </HBox>
    </VBox>

    <!-- Suggested Songs Section -->
    <VBox style="-fx-background-color: #702c2c; -fx-padding: 10; -fx-background-radius: 10;" spacing="5">
        <Label text="Suggested Songs:" textFill="white" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <HBox spacing="5">
            <Label text="Image3" style="-fx-border-color: white; -fx-padding: 20; -fx-border-radius: 20;" />
            <Label text="Image4" style="-fx-border-color: white; -fx-padding: 20; -fx-border-radius: 20;" />
            <Label text="Image5" style="-fx-border-color: white; -fx-padding: 20; -fx-border-radius: 20;" />
        </HBox>
    </VBox>

    <!-- Popular Songs Section -->
    <VBox style="-fx-background-color: #702c2c; -fx-padding: 10; -fx-background-radius: 10;" spacing="10">
        <Label text="Popular Songs:" textFill="white" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <HBox spacing="5">
            <Label text="Image6" style="-fx-border-color: white; -fx-padding: 20; -fx-border-radius: 20;" />
            <Label text="Image7" style="-fx-border-color: white; -fx-padding: 20; -fx-border-radius: 20;" />
            <Label text="Image8" style="-fx-border-color: white; -fx-padding: 20; -fx-border-radius: 20;" />
        </HBox>
    </VBox>

    <!-- New Songs Section -->
    <VBox style="-fx-background-color: #702c2c; -fx-padding: 10; -fx-background-radius: 10;" spacing="5">
        <Label text="New Songs:" textFill="white" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <HBox spacing="5">
            <Label text="Image9" style="-fx-border-color: white; -fx-padding: 20; -fx-border-radius: 10;" />
            <Label text="Image01" style="-fx-border-color: white; -fx-padding: 20; -fx-border-radius: 10;" />
            <Label text="Image02" style="-fx-border-color: white; -fx-padding: 20; -fx-border-radius: 10;" />
        </HBox>
    </VBox>

    <!-- Rounded "Create a Song" Button -->
    <Button fx:id="createSongButton" text="Create a Song +"
      onAction="#handleCreateSong"
            style="-fx-background-color: #9b3e3e; -fx-text-fill: white; -fx-background-radius: 10; -fx-font-size: 16px;" />

</VBox>
</AnchorPane>