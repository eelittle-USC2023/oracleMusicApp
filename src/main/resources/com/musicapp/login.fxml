<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="812" prefWidth="412" spacing="20" style="-fx-background-color: #dba5a5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musicapp.LoginController">

    
    <Label style="-fx-font-size: 32px; -fx-font-weight: bold;" text="ChordSeer" />
    
   
    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
        <TextField fx:id="usernameField" promptText="Username" style="-fx-background-radius: 15; -fx-pref-width: 300;" />
        
        <PasswordField fx:id="passwordField" promptText="Password" style="-fx-background-radius: 15; -fx-pref-width: 300;" />
        
        <Button fx:id="loginButton" onMouseClicked="#loginButtonClicked" style="-fx-background-radius: 15; -fx-pref-width: 300; -fx-pref-height: 40;" text="Login" />
        
        <Button fx:id="createAccountButton" onMouseClicked="#createAccountButtonClicked" style="-fx-background-radius: 15; -fx-pref-width: 300; -fx-pref-height: 40;" text="Create Account" />
    </VBox>

</VBox>
