<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="812" prefWidth="375" style="-fx-background-color: #dba5a5;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.musicapp.SongMenuController">

    <VBox spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="20.0">

    <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Welcome, {Username}" />

    <!-- Rounded Search Bar -->
    <TextField promptText="Search" style="-fx-background-color: #702c2c; -fx-text-fill: white; -fx-background-radius: 10;" />

    <!-- Saved Songs Section -->
    <VBox spacing="5" style="-fx-background-color: #702c2c; -fx-padding: 10; -fx-background-radius: 10;">
        <Label text="Saved Songs:" textFill="white" />
        <HBox spacing="5">
            <Label fx:id="firstSong" onMouseClicked="#firstSongClicked" style="-fx-border-color: gray; -fx-padding: 20; -fx-border-radius: 10;" text="ff" />
            <Label style="-fx-border-color: gray; -fx-padding: 20; -fx-border-radius: 10;" text="Placeholder" />
            <Button style="-fx-background-color: #702c2c; -fx-text-fill: white; -fx-background-radius: 10;" text="+" />
        </HBox>
    </VBox>

    <!-- Suggested Songs Section -->
    <VBox spacing="5" style="-fx-background-color: #702c2c; -fx-padding: 10; -fx-background-radius: 10;">
        <Label text="Suggested Songs:" textFill="white" />
        <HBox spacing="5">
            <Label style="-fx-border-color: gray; -fx-padding: 20; -fx-border-radius: 10;" text="Placeholder" />
            <Label style="-fx-border-color: gray; -fx-padding: 20; -fx-border-radius: 10;" text="Placeholder" />
            <Label style="-fx-border-color: gray; -fx-padding: 20; -fx-border-radius: 10;" text="Placeholder" />
        </HBox>
    </VBox>

    <!-- Popular Songs Section -->
    <VBox spacing="5" style="-fx-background-color: #702c2c; -fx-padding: 10; -fx-background-radius: 10;">
        <Label text="Popular Songs:" textFill="white" />
        <HBox spacing="5">
            <Label style="-fx-border-color: gray; -fx-padding: 20; -fx-border-radius: 10;" text="Placeholder" />
            <Label style="-fx-border-color: gray; -fx-padding: 20; -fx-border-radius: 10;" text="Placeholder" />
            <Label style="-fx-border-color: gray; -fx-padding: 20; -fx-border-radius: 10;" text="Placeholder" />
        </HBox>
    </VBox>

    <!-- New Songs Section -->
    <VBox spacing="5" style="-fx-background-color: #702c2c; -fx-padding: 10; -fx-background-radius: 10;">
        <Label text="New Songs:" textFill="white" />
        <HBox spacing="5">
            <Label style="-fx-border-color: gray; -fx-padding: 20; -fx-border-radius: 10;" text="Placeholder" />
            <Label style="-fx-border-color: gray; -fx-padding: 20; -fx-border-radius: 10;" text="Placeholder" />
            <Label style="-fx-border-color: gray; -fx-padding: 20; -fx-border-radius: 10;" text="Placeholder" />
        </HBox>
    </VBox>

    <!-- Rounded "Create a Song" Button -->
    <Button style="-fx-background-color: #9b3e3e; -fx-text-fill: white; -fx-background-radius: 10;" text="Create a Song +" />

</VBox>
</AnchorPane>
